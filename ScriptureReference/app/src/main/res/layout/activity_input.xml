<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".InputActivity"
    android:id="@+id/myApp">

    <EditText
        android:layout_width="700px"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:hint="Please Enter Book"
        android:width="600px"
        android:textSize="50px"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ff645dff"
        android:textColorHint="#ff6865a3"
        android:outlineProvider="background"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="59dp"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="700px"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:hint="Please Enter Chapter"
        android:width="600px"
        android:textSize="50px"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ff645dff"
        android:textColorHint="#ff6865a3"
        android:outlineProvider="background"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/editText"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="700px"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:hint="Please Enter Verse"
        android:width="600px"
        android:textSize="50px"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ff645dff"
        android:textColorHint="#ff6865a3"
        android:outlineProvider="background"
        android:layout_above="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="56dp"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:text="Share"
        android:textStyle="bold"
        android:textColor="#ffd50400"
        android:onClick="sendMessages"
        android:layout_marginBottom="79dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
